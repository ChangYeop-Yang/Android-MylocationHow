<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fitsSystemWindows="true"
    card_view:cardCornerRadius="10dp">
    <!-- Total Layout -->
    <LinearLayout
        android:id="@+id/AlbumTotalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Top Layout -->
        <LinearLayout
            android:id="@+id/AlbumTopLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- TitleTextView -->
            <TextView
                android:id="@+id/AlbumTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/AlbumCustomTitle"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:textColor="#212121"/>
                <!-- KakaoStore Button -->
                <ImageButton
                    android:id="@+id/AlbumShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share_color"
                    android:layout_margin="10dp"
                    android:contentDescription="@string/AlbumCustomShare"
                    android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>
        <!-- ImageView -->
        <ImageView
            android:id="@+id/AlbumImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/AlbumCustomImage"/>
        <!-- Bottom Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Address TextView -->
            <TextView
                android:id="@+id/AlbumAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/AlbumCustomAddress"
                android:textColor="#727272"/>
            <!-- Score RatingBar -->
            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/AlbumScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_margin="10dp" />
            <!-- Buttom Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Location Button -->
                <Button
                    android:id="@+id/AlbumLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/AlbumCustomLocation"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="#727272"
                    android:drawableLeft="@drawable/ic_place_gray"
                    android:padding="10dp" />
                <!-- Detail Button -->
                <Button
                    android:id="@+id/AlbumDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/AlbumCustomDetail"
                    android:textColor="#03A9F4"
                    android:drawableLeft="@drawable/ic_search_blue" />
                <!-- Drop Button -->
                <Button
                    android:id="@+id/AlbumDrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/AlbumCustomDrop"
                    android:textColor="#727272"
                    android:drawableLeft="@drawable/ic_drop"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>