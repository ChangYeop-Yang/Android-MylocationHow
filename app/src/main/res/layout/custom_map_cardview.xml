<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp">
    <!-- Map Custom Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Map Custom ImageView -->
        <ImageView
            android:id="@+id/MapCustomImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/MapCustomImage"/>
        <!-- Map Custom Title TextView -->
        <TextView
            android:id="@+id/MapCustomTitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MapCustomTitle"
            android:layout_margin="10dp"
            android:textColor="#212121"/>
        <!-- Map Custom Address TextVeiw -->
        <TextView
            android:id="@+id/MapCustomAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/MapCustomAddress"
            android:textColor="#727272"/>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>