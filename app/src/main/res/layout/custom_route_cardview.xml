<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fitsSystemWindows="true"
    card_view:cardCornerRadius="10dp">
    <!-- Route Total Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- Route Text Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- Route Address Layout -->
            <TextView
                android:id="@+id/CustomRouteAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/RouteAddress"
                android:layout_margin="5dp"
                android:textColor="#212121"/>
            <!-- Route Date Layout -->
            <TextView
                android:id="@+id/CustomRouteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RouteDate"
                android:layout_margin="5dp"
                android:textColor="#727272"/>
        </LinearLayout>
        <!-- Route Button Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <!-- Route Drawing Button -->
            <ImageButton
                android:id="@+id/CustomRouteDrawingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/RouteDrawing"
                android:layout_marginRight="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_drawing_gray"/>
            <!-- Route Delete Button -->
            <ImageButton
                android:id="@+id/CustomRouteDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/RouteDelete"
                android:layout_marginLeft="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_drop"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>