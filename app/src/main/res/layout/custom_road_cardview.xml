<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fitsSystemWindows="true"
    card_view:cardCornerRadius="10dp">
    <!-- Road Custom Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Road Custom ImageView -->
        <ImageView
            android:id="@+id/RoadCustomImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/RoadCustomImage"/>

        <!-- Road Custom Title TextView -->
        <TextView
            android:id="@+id/RoadCustomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="@string/RoadCustomTitle"
            android:textColor="#727272"/>

        <!-- Road Custom Title Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- Road Custom Find Button -->
            <Button
                android:id="@+id/RoadCustomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/RoadCustomDetail"
                android:textColor="#03A9F4"
                android:drawableLeft="@drawable/ic_search_blue"/>
            <!-- Road Custom Location Button -->
            <Button
                android:id="@+id/RoadLocationCustomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/RoadCustomLocation"
                android:textColor="#727272"
                android:drawableLeft="@drawable/ic_place_gray"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>